<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDF7EC"
    tools:context=".MainActivity">
    <include layout="@layout/logo_title_main"></include>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="320dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/journal_bg" />

    <Button
        android:id="@+id/btnPlaysongMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="12dp"
        android:text="Practice"
        app:layout_constraintEnd_toStartOf="@+id/btnFreeplayMain"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFreeplayMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Freestyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPlaysongMain" />

    <Button
        android:id="@+id/btnJournalMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:text="Journal"
        app:layout_constraintStart_toEndOf="@+id/btnFreeplayMain"
        app:layout_constraintTop_toTopOf="@+id/btnPlaysongMain" />

    <ListView
        android:id="@+id/lv_journal_main"
        android:layout_width="315dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:text="Reminders:"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />


</androidx.constraintlayout.widget.ConstraintLayout>